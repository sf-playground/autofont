# When TTFAUTOHINT='/some/path/to/nonexistent/command', configure should fail.
#

# Include a set of common test functions
source "$HELPERS"

# Prevent error on missing fontmake--that's not what were
# testing here
mkdir bin
touch bin/fontmake
chmod +x bin/fontmake
export PATH="bin:${PATH}"

# Perform the action under test
export TTFAUTOHINT='/usr/bin/this_command_doesnt_exist'
configure_with_fixtures

# Read the results
source "$RESULTS"

# Validate the expectations
[[ $CONFIGURE_STATUS != 0 ]] && grep 'could not find ttfautohint' config.log

