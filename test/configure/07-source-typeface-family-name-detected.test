# Configure shall detect the typeface family name.  If the UFOs have the same
# font family names, it will be set as the typeface family name.
#

# Include a set of common test functions
source "$HELPERS"

# Establish expectations
expected_source_typeface_family='Hack'
expected_source_typeface_family_lc='hack'

# Perform the action under test
configure_with_fixtures_and_build_deps

# Read the results
source "$RESULTS"

# Validate the expectations
[[ $source_typeface_family == $expected_source_typeface_family &&
   $source_typeface_family_lc == $expected_source_typeface_family_lc ]]

